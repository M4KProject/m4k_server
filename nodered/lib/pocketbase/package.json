{
  "name": "node-red-contrib-pocketbase",
  "version": "1.0.0",
  "description": "PocketBase node for Node-RED",
  "main": "dist/pocketbase.js",
  "keywords": [
    "node-red",
    "pocketbase",
    "auth"
  ],
  "dependencies": {
    "pocketbase": "^0.21.5",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "build": "node esbuild.config.js && cp *.html dist/",
    "dev": "npm-run-all --parallel lint:watch build:watch",
    "lint": "tsc --noEmit",
    "lint:watch": "tsc --noEmit --watch",
    "build:watch": "node esbuild.config.js --watch",
    "clean": "rm -rf dist"
  },
  "node-red": {
    "nodes": {
      "pb-auth": "dist/pb-auth.js",
      "pb-crud": "dist/pb-crud.js"
    }
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@types/node-red": "^1.3.5",
    "esbuild": "^0.25.9",
    "npm-run-all": "^4.1.5"
  }
}
